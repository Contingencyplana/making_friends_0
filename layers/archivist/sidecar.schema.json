{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Asset Sidecar",
  "type": "object",
  "required": ["id", "kind", "owners", "status", "source", "license"],
  "properties": {
    "id": { "type": "string", "description": "stable kebab-case id for the asset" },
    "kind": { "type": "string", "enum": ["asset"] },
    "owners": { "type": "array", "items": { "type": "string" } },
    "status": { "type": "string", "enum": ["draft", "active", "archived"] },
    "source": { "type": "string", "description": "original path or URL" },
    "license": { "type": "string" },
    "hash": { "type": "string", "description": "sha256 of the binary" },
    "bytes": { "type": "integer", "minimum": 0 },
    "tags": { "type": "array", "items": { "type": "string" } },
    "links": { "type": "array", "items": { "type": "string", "format": "uri" } }
  }
}
